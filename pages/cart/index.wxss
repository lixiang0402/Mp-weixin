@import '../../styles/newcheckbox.wxss';

page {
    margin-bottom: 50px;
}

.selectAddress {
    padding: 30rpx;
}

.address {}

.province {
    font-size: 35rpx;
    font-weight: bold;

}

.county {
    margin-left: 10rpx;
    font-size: 29rpx;
}

.user {
    margin-top: 10rpx;
    font-size: 22rpx;
}

.username {
    font-size: 26rpx;
    color: orange;
    font-weight: bold;
    margin-right: 10rpx;
}

.goods-message {
    display: flex;
}

.checked {
    display: flex;
    justify-content: center;
    padding: 0 20rpx;
    align-items: center;
}

.goods_img {
    /* width: 50%; */
    /* height: 40%; */
    width: 180rpx;
    height: 166rpx;
    padding: 10rpx;
}

.goods_img image {
    width: 100%;
    height: 100%;
}

.priceandnumber {
    align-items: flex-end;
}

.goods_describe {
    padding: 25rpx;
    font-size: 24rpx;
    color: #666;
    flex-direction: column;
    justify-content: space-between;
}

.price {
    color: red;
    font-size: 30rpx;
    font-weight: bold;
}

.changenumber {
    padding: 0 20rpx;
}

.btn {
    width: 100rpx;
    height: 40rpx;
    padding: 2rpx;
    margin: 4rpx;
    border: 2rpx solid #eee;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 6rpx;
    font-size: 20rpx;
    color: #aaa;
}

.changenumber {
    justify-content: flex-end;
}

/* 购物车商品为空时 显示的内容 */
.cartEmpt {
    height: 70vh;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: column;

}

.cartEmpt text {
    background: linear-gradient(to right, #ec8087, #eb4450);
    background-clip: text;
    /* background-image:-webkit-linear-gradient(bottom,red,#ff5f60,#f0c41b);  */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 40rpx;
}

.cartEmpt image {
    width: 50%;
}